{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd DOC_Validator_Vercel && pip install -r DOC_Validator_Vercel/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd DOC_Validator_Vercel && python DOC_Validator_Vercel/main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
